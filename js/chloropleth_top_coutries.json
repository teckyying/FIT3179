{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 950,
  "height": 500,
  "title": {
    "text": "Happiness Score of 119 Surveyed Counties",
    "subtitle": [
      "Use the slider to filter for the happiest countries",
      "and see how happy your country is"
    ],
    "subtitlePadding": 10
  },
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Top_Happiest_Countries",
      "value": 156,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 158,
        "step": 1,
        "name": "Show Top Happiest Ranked Countries"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/teckyying/FIT3179/master/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country (No Data)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/teckyying/FIT3179/master/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/teckyying/FIT3179/master/data/world_happiness_2015_to_2019.csv"
            },
            "key": "Country",
            "fields": ["Happiness_Score", "Rank", "Region", "Continent", "Year"]
          }
        },
        {"filter": "datum.Rank <= Top_Happiest_Countries"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Rank",
          "type": "quantitative",
          "scale": {"scheme": {"name": "goldorange", "extent": [1, 0]}},
          "legend": {"title": ["Happiness", "Rank"]}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Region", "type": "nominal"},
          {"field": "Continent", "type": "nominal"},
          {
            "field": "Happiness_Score",
            "type": "quantitative",
            "title": "Happiness Score"
          },
          {"field": "Rank", "type": "quantitative", "title": "Happiness Rank"}
        ]
      }
    }
  ],
  "config": {}
}